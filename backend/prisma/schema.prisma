generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // TODO: fix
  url      = env("DATABASE_URL")
}

model Organization {
  id              String       @id @default(uuid())
  name            String       @unique
  invitationLimit Int?
  createdAt       DateTime     @default(now())
  users           User[]
  invitations     Invitation[]
  Folder          Folder[]
  activities      Activity[]

  @@index([name])
}

model User {
  id                   String       @id @default(uuid())
  email                String       @unique
  passwordHash         String
  name                 String?
  role                 String       @default("member") // admin | member
  organizationId       String
  organization         Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  createdAt            DateTime     @default(now())
  passwordResetToken   String?
  passwordResetExpires DateTime?
  invoices             Invoice[]
  invitationsSent      Invitation[] @relation("InvitedBy")

  @@index([organizationId])
}

model Invitation {
  id             String       @id @default(uuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  email          String
  invitedById    String
  invitedBy      User         @relation("InvitedBy", fields: [invitedById], references: [id], onDelete: Cascade)
  role           String       @default("member")
  token          String       @unique
  expiresAt      DateTime
  status         String       @default("pending") // pending | accepted | expired
  createdAt      DateTime     @default(now())

  @@index([organizationId])
  @@index([email])
  @@index([token])
  @@index([status])
}

model Invoice {
  id        String         @id @default(uuid())
  filename  String
  filePath  String
  mimeType  String
  status    String         @default("pending") // pending | approved | needs_review
  createdAt DateTime       @default(now())
  userId    String?
  user      User?          @relation(fields: [userId], references: [id], onDelete: SetNull)
  fields    InvoiceFields?
  approvals Approval[]
  folderId  String?
  folder    Folder?        @relation(fields: [folderId], references: [id], onDelete: SetNull)

  @@index([status])
  @@index([userId])
  @@index([folderId])
}

model InvoiceFields {
  id                  String    @id @default(uuid())
  invoiceId           String    @unique
  invoice             Invoice   @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  supplierName        String?
  supplierVatNumber   String?
  supplierAddress     String?
  supplierEIK         String?
  clientName          String?
  clientEIK           String?
  clientVatNumber     String?
  invoiceNumber       String?
  invoiceDate         String?
  serviceDescription  String?
  quantity            String?
  unitPrice           Decimal?  @db.Decimal(12, 2)
  serviceTotal        Decimal?  @db.Decimal(12, 2)
  accountingAccount   String?
  currency            String?
  netAmount           Decimal?  @db.Decimal(12, 2)
  vatAmount           Decimal?  @db.Decimal(12, 2)
  totalAmount         Decimal?  @db.Decimal(12, 2)
  confidenceScores    Json?
  extractedAt         DateTime?
}

model Folder {
  id             String       @id @default(uuid())
  name           String
  parentId       String?
  parent         Folder?      @relation("FolderHierarchy", fields: [parentId], references: [id])
  children       Folder[]     @relation("FolderHierarchy")
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  createdAt      DateTime     @default(now())
  invoices       Invoice[]

  @@unique([organizationId, parentId, name])
  @@index([organizationId, parentId])
}

model Approval {
  id         Int      @id @default(autoincrement())
  invoiceId  String
  invoice    Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  approvedBy String
  approvedAt DateTime @default(now())
  action     String // approved | needs_review

  @@index([invoiceId])
}

model Activity {
  id             String       @id @default(uuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  userId         String
  userName       String?
  actionType     String
  entityType     String
  entityId       String?
  entityName     String?
  metadata       Json?
  timestamp      DateTime     @default(now())

  @@index([organizationId, timestamp])
}
